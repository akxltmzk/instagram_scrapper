extends layout

block content 
  p.hidden#ip=socket_ip
  p.hidden#tool=tool
  .content.mobile

    .common_component
      #webgl
      .logo-wrap
        img.logo(src='images/lab-logo.png')
  
    .start-box  
      .form-wrapper 
        .start-guide
          p Welcome to instagram 
          p scrapper, please enter
          p your instagram ID.
        form#initialize-form(action='/initialize-contents')
          input.block.account(type='text' id='instaID' name='instaID'  placeholder='identification' required)
          p.alert   *Only public account are available for this experience
          button(type='submit') START   

    .loader-box.hidden
      .inform-wrapper
        .collecting-data
          .inform COLLECTING YOUR DATA
          .loader Loading 
        .hmd-guide.hidden
          img.hmd-image(src='images/HMD.png')
          p.ready ready!
          p.guide-inform put on the hmd to start
          p.guide-inform the experience
      .cancel-wrapper  
        button.cancel cancel   

    //- for the vr
    .experience-box.hidden
      #timer 
      .cancel-wrapper  
        button.cancel CANCEL  

    //- for the display
    .control-pannel.hidden
      .form-wrapper 
        form#downloadimage-form(action='/download-image')
          button(type='submit') download image  
        form#deleteimage-form(action='/delete-image')
          button(type='submit') delete image    
        form#backtointro-form
          button.cancel(type='submit') back to intro        

  script(src="js/timer.js")
  script(src='js/mobile.js')
  script(src="js/vendor/three.min.js")
  script(src="js/background.js")